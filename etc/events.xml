<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="currency_display_options_forming">
        <observer name="jplocalize_currencysymbol_currency_display_options" instance="Veriteworks\Localize\Observer\ModifyCurrencyOptions" />
    </event>
    <event name="core_copy_fieldset_customer_account_to_quote">
        <observer name="jplocalize_copy_fields_from_customer_to_quote" instance="Veriteworks\Localize\Observer\CopyKanaToQuote" />
    </event>
    <event name="core_copy_fieldset_customer_address_to_quote_address">
        <observer name="jplocalize_copy_fields_from_customer_address_to_quote_address" instance="Veriteworks\Localize\Observer\CopyKanaToQuoteAddress" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="jplocalize_copy_fields_from_quote_to_order" instance="Veriteworks\Localize\Observer\CopyKanaToOrder" />
    </event>
</config>
