<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Directory\Model\ResourceModel\Region\Collection" type="Magejapan\Localize\Model\ResourceModel\Directory\Region\Collection"/>

    <type name="Magento\Directory\Model\Currency">
        <plugin name="modifyCurrencyFormat" type="Magejapan\Localize\Model\Directory\Plugin\ModifyPrice" />
        <plugin name="modifyCurrencyFormat" type="Magejapan\Localize\Model\Directory\Plugin\ModifyPrecision" />
    </type>
    <type name="Magento\Directory\Model\PriceCurrency">
        <plugin name="modifyCurrencyExpression" type="Magejapan\Localize\Model\Directory\Plugin\ModifyPrice" />
    </type>
    <type name="Magento\Framework\Locale\Format">
        <plugin name="modifyPriceFormat" type="Magejapan\Localize\Model\Locale\Plugin\ModifyPriceFormat" />
    </type>

    <type name="Magento\Eav\Model\Entity\Setup\PropertyMapper\Composite">
        <arguments>
            <argument name="propertyMappers" xsi:type="array">
                <item name="jplocalize" xsi:type="string">Magento\Customer\Model\ResourceModel\Setup\PropertyMapper</item>
            </argument>
        </arguments>
    </type>
</config>